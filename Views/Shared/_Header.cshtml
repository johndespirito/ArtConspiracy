<!DOCTYPE HTML>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--[if lte IE 8]><script src="/assets/js/ie/html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="/assets/css/main.css" />
    <!--[if lte IE 8]><link rel="stylesheet" href="/assets/css/ie8.css" /><![endif]-->
    <!--[if lte IE 9]><link rel="stylesheet" href="/assets/css/ie9.css" /><![endif]-->
    <link rel="stylesheet" href="/Scripts/fancybox/jquery.fancybox.css" type="text/css" media="screen" />

</head>
<body>
    <div id="page-wrapper">

        <!-- Header -->
        <div id="header">

            <!-- Logo -->
            <h1><a href="/" id="logo">The Art Conspiracy</a></h1>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/ShowMembers">Members</a></li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                    <li><a href="/Account/Register">Register</a></li>
                    <li><a href="/Account">Log In</a></li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li><a href="/Account">Account</a>
                        <ul>
                            <li>@Html.ActionLink("Gallery Manager", "Index", "GalleryManager")</li>
                            <li>@Html.ActionLink("Edit Profile", "EditProfile", "Account")</li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("logout", "Account")">Log Out</a></li>
                    }
                </ul>
            </nav>

        </div>
